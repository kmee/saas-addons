<odoo>

    <record model="ir.ui.view" id="saas_db_form_view">
        <field name="name">saas.db.form (in saas_operator_remote_deploy)</field>
        <field name="model">saas.db</field>
        <field name="inherit_id" ref="saas.saas_db_form_view"/>
        <field name="arch" type="xml">
            <button name="action_install_missing_mandatory_modules" position="after">
                <button
                    name="auto_update_modules"
                    string="Auto Update Modules"
                    type="object"
                    groups="saas.group_manager"
                />
            </button>
        </field>
    </record>

    <record model="ir.ui.view" id="saas_db_tree_view">
        <field name="name">saas.db.tree (in saas_operator_remote_deploy)</field>
        <field name="model">saas.db</field>
        <field name="inherit_id" ref="saas.saas_db_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field" position="before">
                <header>
                    <button
                        name="action_open_migrate_wizard"
                        class="oe_highlight"
                        string="Migrate Operator Build"
                        type="object"
                    />
                </header>
            </xpath>
        </field>
    </record>

</odoo>
