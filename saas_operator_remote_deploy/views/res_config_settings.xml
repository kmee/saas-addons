<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form (in saas_operator_remote_deploy)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="saas.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='saas']" position="inside">
                <h2>Operator Remote Deployment</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="operator_env"/>
                            <div class="text-muted">
                                <field name="operator_env"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="gitlab_url"/>
                            <div class="text-muted">
                                <field name="gitlab_url"/>
                            </div>
                            <label for="gitlab_private_token"/>
                            <div class="text-muted">
                                <field name="gitlab_private_token"/>
                            </div>
                            <label for="gitlab_deployment_repo"/>
                            <div class="text-muted">
                                <field name="gitlab_deployment_repo"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="deployment_repo_branch"/>
                            <div class="text-muted">
                                <field name="deployment_repo_branch"/>
                            </div>
                            <label for="deployment_folder_prefix"/>
                            <div class="text-muted">
                                <field name="deployment_folder_prefix"/>
                            </div>
                            <label for="deployment_committer_name"/>
                            <div class="text-muted">
                                <field name="deployment_committer_name"/>
                            </div>
                            <label for="deployment_committer_email"/>
                            <div class="text-muted">
                                <field name="deployment_committer_email"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>



</odoo>
